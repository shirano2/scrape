{{>nav index=true}} 
<div id="wrapper">
  <div id="articles">
  {{#if dbArticle}}
    {{#each dbArticle}}
    <div class="card" style="width: 18rem;">
        <img src="{{imageUrl}}" class="card-img-top" alt="pictures">
        <div class="card-body">
            <h5 class="card-title">{{headline}}</h5>
            <p class="card-text">{{summary}}</p>
            <button class="saved btn btn-primary" data-id="{{id}} "data-headline="{{headline}}" data-img="{{img}}" data-summary="{{summary}}" data-url="{{url}}" data-note="{{note}}" data-saved="{{saved}}">SAVE ARTICLE</button>
            <a href="{{url}}" target="_blank"><button class="btn btn-primary">GO TO SITE</button></a>
        </div>
    </div>
    {{/each}}
  {{/if}}
   {{#unless dbArticle}}
   여기2
   {{/unless}}
  </div>
</div>
<script>
$(function() {
    $(".saved").on("click", function(){
        var thisId = $(this).data("id");
        var saved = $(this).data("saved");
        if (saved==="true") {
            $(this).attr("data-saved","false");
            saved="false";
        } else {
            $(this).attr("data-saved","true");
            saved="true";
        }
        $.ajax({
            method: "PUT",
            url: "/saved/" + thisId,
            data: {saved:saved}
        }).then(function(dbArticle) {
            location.assign("/");
        });
    });
});
</script>